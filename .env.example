# Spectre AI Assistant - Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# CORE CONFIGURATION
# ============================================================================

# Node Environment
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# ============================================================================
# AI API KEYS
# ============================================================================

# Claude API Key (Required)
CLAUDE_API_KEY=your_claude_api_key_here

# OpenAI API Key (Optional - for fallback)
OPENAI_API_KEY=your_openai_api_key_here

# ============================================================================
# GITHUB INTEGRATION (Required)
# ============================================================================

# GitHub Personal Access Token
GITHUB_TOKEN=your_github_token_here

# GitHub Username
GITHUB_USERNAME=your_github_username

# ============================================================================
# NOTION INTEGRATION (Required)
# ============================================================================

# Notion API Key
NOTION_API_KEY=your_notion_api_key_here

# Notion Database ID
NOTION_DATABASE_ID=your_notion_database_id_here

# ============================================================================
# SUPABASE INTEGRATION (Optional)
# ============================================================================

# Supabase Project URL
SUPABASE_URL=https://your-project.supabase.co

# Supabase Anonymous Key
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase Service Role Key (for admin operations)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ============================================================================
# VERCEL INTEGRATION (Optional)
# ============================================================================

# Vercel API Token
VERCEL_TOKEN=your_vercel_token_here

# Vercel Team ID (if using team account)
VERCEL_TEAM_ID=your_vercel_team_id_here

# ============================================================================
# CHROMADB CONFIGURATION
# ============================================================================

# ChromaDB Host
CHROMA_HOST=localhost

# ChromaDB Port
CHROMA_PORT=8000

# ChromaDB Collection Name
CHROMA_COLLECTION_NAME=spectre_memory

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# SQLite Database Path
DATABASE_PATH=./data/spectre.db

# ============================================================================
# RATE LIMITING
# ============================================================================

# Rate Limit Window (in milliseconds)
RATE_LIMIT_WINDOW_MS=900000

# Maximum Requests per Window
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# SECURITY
# ============================================================================

# Session Secret (must be at least 32 characters)
SESSION_SECRET=your_session_secret_here_change_in_production_environment

# Encryption Key (must be exactly 32 characters)
ENCRYPTION_KEY=your_32_character_encryption_key_here

# ============================================================================
# LOGGING
# ============================================================================

# Log File Path
LOG_FILE_PATH=./logs/spectre.log

# Log Max Size
LOG_MAX_SIZE=10m

# Log Max Files
LOG_MAX_FILES=5

# ============================================================================
# DEVELOPMENT
# ============================================================================

# Debug Mode
DEBUG_MODE=false

# Enable Metrics
ENABLE_METRICS=true

# ============================================================================
# CORS
# ============================================================================

# CORS Origin
CORS_ORIGIN=*